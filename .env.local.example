# Copia este archivo como .env.local para desarrollo local
# En producción, la variable se inyecta via docker-compose desde .env del stack

# Clave de la API de Anthropic (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-...

# Secreto para firmar sesiones (mínimo 16 chars, recomendado 32+)
ACTION_EXTRACTOR_SESSION_SECRET=change-this-super-secret

# Conexión Postgres
ACTION_EXTRACTOR_DB_HOST=localhost
ACTION_EXTRACTOR_DB_PORT=5432
ACTION_EXTRACTOR_DB_NAME=action_extractor_db
ACTION_EXTRACTOR_DB_USER=action_extractor_user
ACTION_EXTRACTOR_DB_PASSWORD=change-this-password

# Opcional: usar URL única en vez de host/port/user/pass
# ACTION_EXTRACTOR_DATABASE_URL=postgresql://well:password@localhost:5432/action_extractor_db

# Reset de contraseña via email (https://resend.com — plan gratuito disponible)
# Si no se configura, la URL de reset se imprime en consola (solo dev)
RESEND_API_KEY=re_...
# Remitente (debe estar verificado en Resend en producción)
RESEND_FROM_EMAIL=ActionExtractor <noreply@roi.welltechnologies.net>

# URL pública de la app (para generar el enlace de reset en el correo)
NEXT_PUBLIC_APP_URL=https://roi.welltechnologies.net

# Límite de solicitudes de extracción por usuario y por hora
ACTION_EXTRACTOR_EXTRACTIONS_PER_HOUR=12

# Correos con acceso al dashboard de admin (/admin)
# Formato: correos separados por coma
ACTION_EXTRACTOR_ADMIN_EMAILS=wdperezh@gmail.com

# Estimación de costo por extracción única en dashboard admin (USD)
ACTION_EXTRACTOR_ESTIMATED_COST_PER_EXTRACTION_USD=0.04

# Integración OAuth con Notion (https://www.notion.so/my-integrations)
# Usa una integración "Public" para OAuth por usuario.
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
# Opcional: URL callback personalizada (si no se define usa ${NEXT_PUBLIC_APP_URL}/api/notion/callback)
# NOTION_REDIRECT_URI=https://roi.welltechnologies.net/api/notion/callback

# Trello (https://trello.com/power-ups/admin) — solo requiere API key para flujo token OAuth
TRELLO_API_KEY=

# Todoist OAuth (https://developer.todoist.com/appconsole.html)
TODOIST_CLIENT_ID=
TODOIST_CLIENT_SECRET=
# Opcional: URL callback personalizada (si no se define usa ${NEXT_PUBLIC_APP_URL}/api/todoist/callback)
# TODOIST_REDIRECT_URI=https://roi.welltechnologies.net/api/todoist/callback

# Google OAuth para Docs (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Opcional: URL callback personalizada (si no se define usa ${NEXT_PUBLIC_APP_URL}/api/google-docs/callback)
# GOOGLE_DOCS_REDIRECT_URI=https://roi.welltechnologies.net/api/google-docs/callback
# Opcional: URL callback personalizada para login/registro con Google
# Si no se define usa ${NEXT_PUBLIC_APP_URL}/api/auth/google/callback
# GOOGLE_AUTH_REDIRECT_URI=https://roi.welltechnologies.net/api/auth/google/callback

# Monitoreo de errores (Sentry)
# DSN privado para servidor (API routes, server components)
SENTRY_DSN=
# DSN público para cliente (errores en navegador)
NEXT_PUBLIC_SENTRY_DSN=
# Entorno y release (opcional)
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=
# Porcentaje de trazas (0 a 1)
SENTRY_TRACES_SAMPLE_RATE=0.1

# Evidencias por subitem (Cloudinary)
# https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Carpeta destino para archivos de evidencias
CLOUDINARY_FOLDER=action-extractor/subitems
# Tamaño máximo de carga (MB) para PDF/imagen/audio
CLOUDINARY_MAX_UPLOAD_MB=25
